<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#e1e7e7"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/tvone">

    <TextView
        android:textColor="#070645"
        android:textSize="27sp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Vinny from our app"
        android:id="@+id/textView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please register"
        android:id="@+id/tvtwo"
        android:textAlignment="center"
        android:textColor="#567"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtname"
        android:hint="Name Here" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edtmail"
        android:hint="E-mail Here" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtnumber"
        android:hint="Phone Number" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/edtpassword"
        android:password="false" />

    <Button
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#256"
        android:textColor="#559"
        android:layout_marginTop="20dp"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnregister" />

    <Button
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="#256"
        android:textColor="#559"
        android:layout_marginTop="20dp"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btnlogin" />

</LinearLayout>
