<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/health7"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/txtthree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:paddingTop="20dp" />

    <EditText
        android:id="@+id/edtone"
        android:layout_width="291dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="104dp"
        android:background="#690"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#409"
        android:textColor="#424" />

    <TextView
        android:id="@+id/txtfour"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtthree"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="8dp"
        android:text="Username"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edttwo"
        android:layout_alignStart="@+id/edttwo"
        android:layout_marginBottom="-183dp"
        android:text="Password"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edttwo"
        android:layout_width="285dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="195dp"
        android:background="#690"
        android:ems="10"
        android:inputType="textPassword"
        android:shadowColor="#409"
        android:textColor="#424" />

    <Button
        android:id="@+id/btnone"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btntwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="93dp"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="-185dp"
        android:background="#484d70"
        android:gravity="center"
        android:text="Login"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:background="#484d70"
        android:id="@+id/btntwo"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="244dp"
        android:layout_marginRight="244dp"
        android:layout_marginBottom="4dp"
        android:text="SignUp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:background="#484d70"
        android:id="@+id/btnthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btntwo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Forgot password?"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnfive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-244dp"
        android:layout_marginBottom="106dp"
        android:layout_toEndOf="@+id/btntwo"
        android:text="Fragment" />


</RelativeLayout>